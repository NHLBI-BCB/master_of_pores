singularity.autoMounts = true

env {
  PYTHONNOUSERSITE = 1
}

process {
  memory='12G'
  cache='lenient'
  container = 'biocorecrg/mopprepr:0.1'
  containerOptions = { workflow.containerEngine == "docker" ? '-u $(id -u):$(id -g)': null}
  withLabel: big_cpus {
        cpus = 8
        memory = '25G'
  }
  withLabel: big_mem_cpus_time { 
        cpus = 40
        memory = '800G'
        time = '96h'
  }
  withLabel: big_mem_cpus {
        cpus = 8
        memory = '60G'
  }
  withLabel: basecall_cpus {
        container = 'biocorecrg/mopbasecall:0.1'
        cpus = 8
        memory = '5G'
  }
  withLabel: basecall_gpus {
        container = 'biocorecrg/mopbasecall:0.1'
        cpus = 2 
        maxForks = 1
        containerOptions = { workflow.containerEngine == "singularity" ? '--nv':
           ( workflow.containerEngine == "docker" ? '-u $(id -u):$(id -g) --gpus all': null ) } 
  } 
}

profiles {
    local {
        process {
    		executor = 'local'
    		cpus = 4
    		memory = '12GB'    
    	}
    }
}
