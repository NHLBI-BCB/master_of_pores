process {
  memory='4G'
  cache='lenient'
  container = 'biocorecrg/nanopore:0.8'
  queue='biocore-el7,long-sl7,short-sl7'

  withLabel: porechop {
        container = 'biocorecrg/porechop:0.1'
  	memory = '5G'
        cpus = 1
  }
  withLabel: big_cpus {
        cpus = 2
        memory = '5G'
  }
  withLabel: big_mem_cpus {
        cpus = 2
        memory = '5G'
  }
   withLabel: with_gpus {
        maxForks = 1
        containerOptions = { workflow.containerEngine == "singularity" ? '--nv':
        {workflow.containerEngine == "docker" ? '--gpus all': null } }
  } 
}

